<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:radioButtonStyle">@style/MyRadioButton</item>


        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E65100</item>
        <item name="colorPrimaryDark">#66BB6A</item>
        <item name="colorAccent">#F44336</item>




    </style>
    <style name="question" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">#F44336</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="MyRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#66BB6A</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_marginLeft">15dp</item>


    </style>
    <style name="MyRadioGroup">
        <item name="android:layout_marginLeft">10dp</item>
       <item name="android:layout_marginRight">10dp</item>
       <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/fdf</item>



        <item name="android:orientation">vertical</item>







    </style>








</resources>
